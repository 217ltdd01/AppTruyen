<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#fff"
    android:backgroundTint="@android:color/tertiary_text_dark"
    android:weightSum="10">

    <ImageView
        android:id="@+id/imgAnh"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTenTruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên truyện"
            android:textColor="#fdf325"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textSC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Chương "
                android:textColor="#fdfdfd"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textSoChuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fdfdfd"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textTG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" - T/g: "
                android:textColor="#fdfdfd"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textTenTacGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fdfdfd"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/textNCN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Ngày cập nhật: "
                android:textColor="#fdfdfd"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textNgayCapNhat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fdfdfd" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>